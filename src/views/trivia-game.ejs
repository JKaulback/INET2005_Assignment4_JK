<html>
    <head>
        <!-- Page title shown in browser tab -->
        <title>Trivia Bot</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    </head>
    <body class="bg-dark text-light d-flex justify-content-center">
        <div class="d-flex flex-column justify-content-center align-items-center">
            

            <div class="d-flex">
                <a href="/" style="height: min-content" class="btn btn-danger btn-lg me-5">EXIT</a>
                <div id="player-score-container" style="background-color:#3f474f; height: 50px; width: 100px" class="rounded mb-5 d-flex align-items-center justify-content-center">
                    <p class="m-0">SCORE: <%= player_score %></p>
                </div>
            </div>
            
            <div id="trivia-question-container" style="background-color: #3f474f; width: 500px; height: 90px" class="rounded p-1 mb-5 d-flex justify-content-center align-items-center">
                <p class="m-0 text-center"><%= trivia_question %></p>
            </div>

            <div id="trivia-answers-container" style="width: 60vw" class="container-fluid font-monospace">
                <div class="row align-items-center justify-content-center">
                    <div class="col-sm d-flex justify-content-center">
                        <%- include('trivia-answer', {trivia_answer: trivia_answers[0], is_revealed: is_revealed}) %>
                    </div>
                    <div class="col-sm d-flex justify-content-center">
                        <%- include('trivia-answer', {trivia_answer: trivia_answers[1], is_revealed: is_revealed}) %>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center">
                    <div class="col-sm d-flex justify-content-center">
                        <%- include('trivia-answer', {trivia_answer: trivia_answers[2], is_revealed: is_revealed}) %>
                    </div>
                    <div class="col-sm d-flex justify-content-center">
                        <%- include('trivia-answer', {trivia_answer: trivia_answers[3], is_revealed: is_revealed}) %>
                    </div>
                </div>
            </div>

            <div id="after-answer" style="width: 150px; height: 100px; visibility: <%= is_revealed ? 'visible' : 'hidden' %>" class="d-flex flex-column justify-content-center align-items-center">
                <div id="answer-feedback" style="width: 100px; height: 40px;" class="d-flex justify-content-center align-items-center">
                    <% if (answer_correct) { %>
                        <p class="btn btn-success disabled">CORRECT!</p>
                    <% } else { %>
                        <p class="btn btn-danger disabled">INCORRECT...</p>
                    <% } %>
                </div>
                <a href="/trivia-game" class="btn btn-warning btn-lg" tabindex="-1">NEXT</a>
            </div>
        </div>
    </body>
</html>